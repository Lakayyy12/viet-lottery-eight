<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".AboutPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner1"
            android:background="@drawable/customborder3"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abt1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:justificationMode="inter_word"
        android:shadowRadius="5"
        android:shadowColor="#FFD600"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abt2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:justificationMode="inter_word"
        android:shadowRadius="3"
        android:shadowColor="#FFD600"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abt3"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:justificationMode="inter_word"
        android:shadowRadius="3"
        android:shadowColor="#FFD600"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abt4"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:justificationMode="inter_word"
        android:shadowRadius="3"
        android:shadowColor="#FFD600"/>


        <TextView
            android:id="@+id/btnA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/tabbar1"
            android:text="QUAY LẠI TRANG CHÍNH"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center"
            android:shadowRadius="3"
            android:shadowColor="#64DD17"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>